@inject IProductService ProductService
<h3>Product Skus</h3>

<ul class="list-unstyled">
    @foreach (var product in ProductService.Products)
    {
        <li class="media my-3">
            <div class="media-img-wrapper mr-4">
                <a href="/product/@product.ProductId"></a>
                <img class="media-img" src="@product.Image" alt="@product.Title" />
            </div>
            <div class="media-body">
                <a href="/product/@product.ProductId">
                    <h4 class="mb-0">Item SKU: @product.Title</h4>
                </a>
                <p>Unit Price: @product.Price</p>
                @*@if (product.Discount != null)
                {
                    <h6>Promotion: @product.Discount.DiscountTitle</h6>
                }*@
            </div>
        </li>
    }
</ul>

@code {

    protected override async Task OnInitializedAsync()
    {
        await ProductService.LoadProducts();
    }
}
